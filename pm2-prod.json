{
  "apps": [
    {
      "name": "prd-solareum-xsb",
      "script": "./.build/server.js",
      "exec_mode": "cluster",
      "instances": "max",
      "args": "start",
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "log"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 6800,
        "HOST_PATH": "api.solareum.app"
      }
    }
  ]
}